<extend name="Public/base"/>
<block name="container">
    <div class="row">
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 body_left_bg text-center">
            <include file="Public/Delivery/column"/>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10" >
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12  shop_right">
                        <div class="row">
                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                                <div class="row">
                                    <a href="{:U('Delivery/index')}">
                                        <p class="shop_right_color">
                                            配送员管理
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                                <div class="row">
                                    <a href="{:U('Delivery/add')}">
                                        <p class="shop_right_color">
                                            配送员添加
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 pull-right">
                                <form class="form-horizontal" method="post" id="user-editor" enctype="multipart/form-data" action="{:U('Delivery/index')}">
                                    <div class="row form-group">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <p><input class="shop_search_input" name="s_name" placeholder="输入配送员名字关键字" type="text"> <button>搜索</button></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 shop_list">
                        <div class="row">
                            <table class="table table-bordered">
                                <tr class="text-center">
                                    <td class="active">账号</td>
                                    <td class="active">头像</td>
                                    <td class="active">名称</td>
                                    <td class="active">工号</td>
                                    <td class="active">联系方式</td>
                                    <td class="active">状态</td>
                                    <td class="active">操作</td>
                                </tr>
                                <foreach name="list" item="vo" key="k">
                                    <if condition="($k%2) eq 0">
                                        <tr class="text-center">
                                            <td class="info">{$vo.account_num}</td>
                                            <td class="info"><img src="__ROOT__/{$vo.user_logo}" alt="" style="height: 50px; width: 50px; border-radius: 25px;"></td>
                                            <td class="info">{$vo.s_name}</td>
                                            <td class="info">{$vo.job_number}</td>
                                            <td class="info">{$vo.phone}</td>
                                            <td class="info">
                                                <if condition="$vo['status'] eq 1">
                                                    正常
                                                    <else/>
                                                    冻结
                                                </if>
                                            </td>
                                            <td class="info">
                                                <a href="{:U('Delivery/status',array('id'=>$vo['id']))}">
                                                    <if condition="$vo['status'] eq 1">
                                                        <span class="label btn-warning">冻结</span>
                                                        <else/>
                                                        <span class="label btn-primary"> 正常</span>
                                                    </if>
                                                </a>
                                                <a href="{:U('Delivery/see',array('id'=>$vo['id']))}">
                                                    <span class="label btn-warning">查看详细信息</span>
                                                </a>
                                                <a href="{:U('Delivery/delete',array('id'=>$vo['id']))}">
                                                    &nbsp;<span class="label btn-danger">删除</span>
                                                </a>
                                                <a href="{:U('Delivery/editor',array('id'=>$vo['id']))}">
                                                    &nbsp;<span class="label btn-primary">修改</span>
                                                </a>
                                            </td>
                                        </tr>
                                        <else/>
                                        <tr class="text-center">
                                            <td class="active">{$vo.account_num}</td>
                                            <td class="active"><img src="__ROOT__/{$vo.user_logo}" alt="" style="height: 50px; width: 50px; border-radius: 25px;"></td>
                                            <td class="active">{$vo.s_name}</td>
                                            <td class="active">{$vo.job_number}</td>
                                            <td class="active">{$vo.phone}</td>
                                            <td class="active">
                                                <if condition="$vo['status'] eq 1">
                                                    正常
                                                    <else/>
                                                    冻结
                                                </if>
                                            </td>
                                            <td class="active">
                                                <a href="{:U('Delivery/status',array('id'=>$vo['id']))}">
                                                    <if condition="$vo['status'] eq 1">
                                                        <span class="label btn-warning">冻结</span>
                                                        <else/>
                                                        <span class="label btn-primary"> 正常</span>
                                                    </if>
                                                </a>
                                                <a href="{:U('Delivery/see',array('id'=>$vo['id']))}">
                                                    <span class="label btn-warning">查看详细信息</span>
                                                </a>
                                                <a href="{:U('Delivery/delete',array('id'=>$vo['id']))}">
                                                    &nbsp;<span class="label btn-danger">删除</span>
                                                </a>
                                                <a href="{:U('Delivery/editor',array('id'=>$vo['id']))}">
                                                    &nbsp;<span class="label btn-primary">修改</span>
                                                </a>
                                            </td>
                                        </tr>
                                    </if>
                                </foreach>
                            </table>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12  text-center" id="page" style="margin-top: 20px;">
                        {$page}
                    </div>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="js">


</block>


