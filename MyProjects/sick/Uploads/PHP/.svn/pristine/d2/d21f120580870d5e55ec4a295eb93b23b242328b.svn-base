<extend name="Public/base"/>
<block name="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12  shop_right">
                <div class="row">
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                        <div class="row">
                            <a href="{:U('User/index')}">
                                <p class="shop_right_color">
                                    医生列表
                                </p>
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 pull-right">
<!--                        <form class="form-horizontal" method="post" id="user-editor" enctype="multipart/form-data" action="{:U('User/index')}">
                            <div class="row form-group">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <p><input class="shop_search_input" placeholder="输入用户名关键字" name="user_name" type="text"> <button>搜索</button></p>
                                </div>
                            </div>
                        </form>-->

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 shop_list">
                <div class="row">
                    <table class="table table-bordered">
                        <tr class="text-center">
                            <td class="active">用户名</td>
                            <td class="active">头像</td>
                            <td class="active">医师职称</td>
                            <td class="active">性别</td>
                            <td class="active">所属科室</td>
                            <td class="active">注册时间</td>
                            <td class="active">状态</td>
                            <td class="active">操作</td>
                        </tr>

                        <foreach name="list" item="vo" key="k">
                            <if condition="($k%2) eq 0">
                                <tr class="text-center">
                                    <td class="info">{$vo.name}</td>
                                    <td class="info">
                                        <if condition="$vo['image']">
                                            <img src="__ROOT__/{$vo.image}" alt="" style="height: 30px; width: 30px; border-radius: 15px;">
                                            <else/>
                                            <img src="__PUBLIC__/images/1.jpg" alt="" style="height: 30px; width: 30px; border-radius: 15px;">
                                        </if>
                                    </td>
                                    <td class="info">{$vo.jobtitle}</td>
                                    <td class="info">
                                        <if condition="$vo['sex'] eq 1">
                                            男
                                            <else/>
                                            女
                                        </if>
                                    </td>
                                    <td class="info">
                                        {$vo.birth_date}
                                    </td>
                                    <td class="info">
                                        {$vo.time}
                                    </td>
                                    <td class="info">
                                        <if condition="$vo['status'] eq 1">
                                            正常
                                            <else/>
                                            冻结
                                        </if>
                                    </td>
                                    <td class="info">
                                        <if condition="$vo['status'] eq 1">
                                            <a href="{:U('User/disabled',array('id'=>$vo['id'],'status'=>0))}">
                                                <span class="label btn-warning">冻结</span>
                                            </a>
                                            <else/>
                                            <a href="{:U('User/disabled',array('id'=>$vo['id'],'status'=>1))}">
                                                <span class="label btn-primary"> 正常</span>
                                            </a>
                                        </if>
                                        <a href="{:U('User/doctoredit',array('id'=>$vo['id']))}">
                                            <span class="label btn-primary">审核</span>
                                        </a>
                                       <!--  <a href="{:U('User/doctoredit',array('id'=>$vo['id']))}">
                                            <span class="label btn-primary">编辑</span>
                                        </a> -->
                                    </td>
                                </tr>
                                <else/>
                                <tr class="text-center">
                                    <td class="active">{$vo.name}</td>
                                    <td class="active">
                                        <if condition="$vo['image']">
                                            <img src="__ROOT__/{$vo.image}" alt="" style="height: 30px; width: 30px; border-radius: 15px;">
                                            <else/>
                                            <img src="__PUBLIC__/images/1.jpg" alt="" style="height: 30px; width: 30px; border-radius: 15px;">
                                        </if>

                                    </td>
                                    <td class="active">{$vo.jobtitle}</td>
                                    <td class="active">
                                        <if condition="$vo['sex'] eq 1">
                                            男
                                            <else/>
                                            女
                                        </if>
                                    </td>
                                    <td class="active">
                                        {$vo.birth_date}
                                    </td>
                                    <td class="active">
                                        {$vo.time}
                                    </td>
                                    <td class="active">
                                        <if condition="$vo['status'] eq 1">
                                            正常
                                            <else/>
                                            冻结
                                        </if>
                                    </td>
                                    <td class="active">
                                        <if condition="$vo['status'] eq 1">
                                            <a href="{:U('User/disabled',array('id'=>$vo['id'],'status'=>0))}">
                                                <span class="label btn-warning">冻结</span>
                                            </a>
                                            <else/>
                                            <a href="{:U('User/disabled',array('id'=>$vo['id'],'status'=>1))}">
                                                <span class="label btn-primary"> 正常</span>
                                            </a>
                                        </if>
                                         <a href="{:U('User/doctoredit',array('id'=>$vo['id']))}">
                                            <span class="label btn-primary">审核</span>
                                        </a>
                                        <!--  <a href="{:U('User/delete',array('id'=>$vo['id']))}">
                                            <span class="label btn-primary">编辑</span>
                                        </a> -->
                                    </td>
                                </tr>
                            </if>
                        </foreach>
                    </table>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12  text-center" id="page" style="margin-top: 20px;">
                {$page}
            </div>
        </div>
    </div>
</block>
<block name="js">
    <script src="__PUBLIC__/script/jquery-2.1.1.min.js"></script>
    <script src="__PUBLIC__/script/bootstrap.min.js"></script>

</block>


