<extend name="Public/base"/>
<block name="container">
    <form class="form-horizontal" method="post" action="{:U('Activity/addActivity')}" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-lg-2 control-label">活动标题:</label>
            <div class="col-lg-4">
                <input type="text"  class="form-control" name="infoname" required>
            </div>
            <span class="col-lg-6 height-center"></span>
        </div>

         <div class="form-group">
            <label class="col-lg-2 control-label">排序值:</label>
            <div class="col-lg-4">
                 <input type="number" min='0' class="form-control" value="{$data.displayorder}" name="displayorder"/>
            </div>
            <span class="col-lg-6 height-center"></span>
        </div>
      
          <div class="form-group">
            <label class="col-lg-2 control-label">是否启用：</label>
            <div class="col-lg-4">
                    <label class="radio-inline">
                        <input type="radio" value="0"  name="status">启用
                    </label>
                    <label class="radio-inline">
                        <input type="radio"  checked value="1"  name="status">不启用
                    </label>
            </div>
            <span class="col-lg-6 height-center"></span>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">活动内容:</label>
            <div class="col-lg-4">
               <script id="editor" name='content' type="text/plain" style="width:780px;height:350px;"></script>
            </div>
            <span class="col-lg-1 height-center text-danger"></span>
        </div>
           
        <div class="form-group">
            <div class="col-lg-offset-3 col-lg-4">
                <button class="btn btn-sm btn-success" type="submit">提交</button>
            </div>
        </div>
    </form>
</block>
<block name="js">
    <script src="__PUBLIC__/script/jquery-2.1.1.min.js"></script>
    <script src="__PUBLIC__/script/bootstrap.min.js"></script>

    <script type="text/javascript" charset="utf-8" src="__PUBLIC__/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="__PUBLIC__/ueditor/ueditor.all.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="__PUBLIC__/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript">
    //实例化编辑器
    //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
    var ue = UE.getEditor('editor');  
    </script>
</block>

















